.mine_box {
  height: 100%;
  background: #efeff0;
}
.mine_bgc {
  height: 330rpx;
  background: #f75360;
  padding: 30rpx;
  margin-bottom: 120rpx;
}
.mine_bgc .mine_info {
  border-radius: 10rpx;
  height: 390rpx;
  background: #ffffff;
}
.mine_bgc .mine_info .userInfo_box {
  padding: 30rpx 60rpx;
  overflow: hidden;
}
.mine_bgc .mine_info .userAvatar {
  margin: 20rpx;
}
.mine_bgc .mine_info .userAvatar,
.mine_bgc .mine_info .user_info {
  float: left;
}
.mine_bgc .mine_info .userName {
  font-size: 50rpx;
}
.mine_bgc .mine_info .syncBtn {
  margin-top: 20rpx;
  color: #f75360;
}
.badge-icon {
  position: absolute;
  top: 14rpx;
  right: 40rpx;
  width: 30rpx;
  height: 30rpx;
}
.grid-text {
  font-size: 28rpx;
  margin-top: 4rpx;
  color: #909399;
}
.cellListBox {
  padding: 0 30rpx 30rpx;
}
.cellListBox .cellList {
  border-radius: 10rpx !important;
  overflow: hidden;
}

